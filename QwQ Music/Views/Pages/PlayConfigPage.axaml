<UserControl d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             Margin="0,5"
             x:Class="QwQ_Music.Views.Pages.PlayConfigPage"
             x:DataType="pages:PlayConfigPageViewModel"
             xmlns="https://github.com/avaloniaui"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:QwQ_Music.ViewModels.Pages"
             xmlns:utilities="clr-namespace:QwQ_Music.Common.Utilities"
             xmlns:u="https://irihi.tech/ursa">

    <ScrollViewer>

        <StackPanel Spacing="20">

            <StackPanel.Styles>

                <Style Selector="WrapPanel">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="ItemSpacing" Value="20" />
                    <Setter Property="LineSpacing" Value="20" />
                </Style>

                <Style Selector="WrapPanel > Border">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderCardBorderBrush}" />
                    <Setter Property="Background" Value="{DynamicResource SemiColorBackground0}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="MinWidth" Value="200" />
                    
                    <Setter Property="Transitions">
                        <Transitions>
                            <EffectTransition Duration="0:0:0.3"
                                              Property="Effect" />
                        </Transitions>
                    </Setter>
                    
                    <Style Selector="^:pointerover">
                        <Setter Property="Effect"
                                Value="{DynamicResource LightColorDropShadowEffect}" />
                    </Style>
                </Style>


                <Style Selector="WrapPanel > Border > StackPanel > StackPanel > TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>

            </StackPanel.Styles>

            <WrapPanel>

                <WrapPanel.Styles>

                    <Style Selector="WrapPanel > Border > StackPanel">
                        <Setter Property="Margin" Value="10,15" />
                        <Setter Property="Spacing" Value="10" />
                    </Style>

                    <Style Selector="WrapPanel > Border > StackPanel > RadioButton">
                        <Setter Property="Margin" Value="25,0" />
                    </Style>

                    <Style Selector="WrapPanel > Border > StackPanel > StackPanel">
                        <Setter Property="Height" Value="25" />   
                        <Setter Property="Spacing" Value="5" />
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>

                    <Style Selector="WrapPanel > Border > StackPanel > StackPanel > PathIcon">
                        <Setter Property="Width" Value="20" />
                    </Style>

                </WrapPanel.Styles>

                <Border>
                    <StackPanel>
                        <StackPanel>
                            <PathIcon Data="{StaticResource SemiIconMusicNoteStroked}" Height="14" Foreground="{x:Static utilities:ColorGenerator.RandomColor}"/>
                            <TextBlock Text="播放完成后 : " />
                        </StackPanel>

                        <RadioButton Content="自动切换" IsChecked="{Binding PlayerConfig.AutoSwitchNext}" />
                        <RadioButton Content="回到开头" IsChecked="{Binding !PlayerConfig.AutoSwitchNext}" />
                    </StackPanel>
                </Border>

                <Border>
                    <StackPanel>
                        <StackPanel>
                            <PathIcon Data="{StaticResource SemiIconChevronUpDown}" Height="14" Foreground="{x:Static utilities:ColorGenerator.RandomColor}"/>
                            <TextBlock Text="切换音乐时 : " />
                        </StackPanel>
                        
                        <RadioButton Content="从头开始播放" IsChecked="{Binding PlayerConfig.IsRestartPlay}" />
                        <RadioButton Content="继续上次播放" IsChecked="{Binding !PlayerConfig.IsRestartPlay}" />
                    </StackPanel>
                </Border>

                <Border>
                    <StackPanel>
                        <StackPanel>
                            <PathIcon Data="{StaticResource Random}" Height="14" Foreground="{x:Static utilities:ColorGenerator.RandomColor}"/>
                            <TextBlock Text="随机模式 : " />
                        </StackPanel>

                        <RadioButton Content="随机切换一首" IsChecked="{Binding PlayerConfig.IsRealRandom}" />
                        <RadioButton Content="打乱播放列表" IsChecked="{Binding !PlayerConfig.IsRealRandom}" />
                    </StackPanel>
                </Border>

                <Border>
                    <StackPanel>
                        <StackPanel>
                            <PathIcon Data="{StaticResource SemiIconSonicStroked}" Height="12.5" Foreground="{x:Static utilities:ColorGenerator.RandomColor}"/>
                            <TextBlock Text="输出采样率 : " />
                        </StackPanel>

                        <ComboBox
                            IsEnabled="{Binding !PlayerConfig.IsAutoSetSampleRate}"
                            ItemsSource="{Binding PlayerConfig.AudioOutputSampleRateArray}"
                            Margin="25,0"
                            MinWidth="100"
                            SelectedItem="{Binding PlayerConfig.SampleRate}" />

                        <CheckBox
                            Content="自动采样率"
                            IsChecked="{Binding PlayerConfig.IsAutoSetSampleRate}"
                            Margin="25,0" />

                    </StackPanel>
                </Border>


            </WrapPanel>

            <WrapPanel>

                <WrapPanel.Styles>

                    <Style Selector="WrapPanel StackPanel">
                        <Setter Property="Spacing" Value="10" />
                    </Style>

                    <Style Selector="WrapPanel > Border > StackPanel > StackPanel">
                        <Setter Property="Height" Value="25" />
                    </Style>

                </WrapPanel.Styles>

                <Border MinWidth="280" Padding="15">

                    <StackPanel Spacing="0">

                        <!--
                        <StackPanel.Resources>

                            ~1~  ReSharper disable once Xaml.RedundantResource  @1@
                            <x:Double x:Key="BannerTitleFontSize">14</x:Double>

                        </StackPanel.Resources>

                        <u:Banner
                            Classes="Bordered"
                            Content="回放增益是一种用于标准化音频播放音量的技术，旨在解决不同音频文件之间音量差异的问题。QWQ Music 通过分析音频文件的内容，计算出一个标准化的响度值，并将该值存储在数据库中，而不会对音频本身进行更改。"
                            CornerRadius="8"
                            FontSize="12"
                            Header="什么是回放增益"
                            HorizontalContentAlignment="Stretch" />
                            -->

                        <StackPanel
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            
                            <Rectangle
                                Fill="{x:Static utilities:ColorGenerator.RandomColor}"
                                Margin="0,5"
                                RadiusX="2" RadiusY="2"
                                Width="4" />

                            <TextBlock FontWeight="Bold" Text="启用回放增益" />
                            <CheckBox IsChecked="{Binding SoundModifierConfig.ReplayGainModifier.Enabled}" />
                        </StackPanel>

                        <DockPanel>

                            <StackPanel
                                DockPanel.Dock="Bottom"
                                Orientation="Horizontal"
                                Spacing="10">

                                <Button
                                    Command="{Binding ToggleCalculationCommand}"
                                    Content="{Binding CalculationButtonText}"
                                    CornerRadius="8"
                                    FontSize="12"
                                    Background="Transparent"
                                    Padding="8" />

                                <Button
                                    Command="{Binding CancelCalculationCommand}"
                                    Content="取消"
                                    Background="Transparent"
                                    CornerRadius="8"
                                    FontSize="12"
                                    Padding="8" />

                                <u:IconButton
                                    Command="{Binding ClearCallbackGainCommand}"
                                    Content="清空"
                                    Background="Transparent"
                                    CornerRadius="8"
                                    FontSize="12">
                                    <u:IconButton.Icon>
                                        <PathIcon
                                            Data="{StaticResource SemiIconDelete}"
                                            Foreground="{DynamicResource SemiRed4}"
                                            Height="12" />
                                    </u:IconButton.Icon>
                                </u:IconButton>
                            </StackPanel>

                            <StackPanel
                                DockPanel.Dock="Right"
                                Margin="15,30,0,30"
                                Spacing="10"
                                Width="125">

                                <u:Divider Content="响度标准" FontSize="12" />

                                <ComboBox
                                    HorizontalAlignment="Right"
                                    ItemsSource="{Binding MusicReplayGainStandardList}"
                                    SelectedItem="{Binding SelectedMusicReplayGainStandard}"
                                    Width="125" />

                                <u:NumericIntUpDown
                                    HorizontalAlignment="Right"
                                    IsVisible="{Binding SelectedMusicReplayGainStandard, Converter={StaticResource StringCompareConverter}, ConverterParameter='Custom'}"
                                    Value="{Binding CustomMusicReplayGainStandard}"
                                    Width="110" />

                            </StackPanel>

                            <Panel>

                                <Panel.Styles>
                                    <Style Selector="ProgressBar:horizontal /template/ TextBlock#PART_ProgressText">
                                        <Setter Property="RenderTransform" Value="translateY(-10px)" />
                                    </Style>

                                </Panel.Styles>

                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    RenderTransform="translateY(10px)"
                                    Spacing="0"
                                    VerticalAlignment="Center">

                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Text="{Binding NumberOfCompletedCalc}" />

                                    <TextBlock FontSize="12"
                                               Text="{Binding MusicItemManager.MusicItems.Count, StringFormat=' / {0}'}" />

                                </StackPanel>

                                <ProgressBar
                                    Height="120"
                                    Margin="5,25"
                                    Maximum="{Binding MusicItemManager.MusicItems.Count}"
                                    ShowProgressText="True"
                                    Theme="{DynamicResource ProgressRing}"
                                    Value="{Binding NumberOfCompletedCalc}"
                                    Width="120" />
                            </Panel>
                        </DockPanel>

                    </StackPanel>
                </Border>

                <Border Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            
                            <Rectangle
                                Fill="{x:Static utilities:ColorGenerator.RandomColor}"
                                Margin="0,5"
                                RadiusX="2" RadiusY="2"
                                Width="4" />
                            
                            <TextBlock Text="启用淡入淡出" />
                            <CheckBox IsChecked="{Binding SoundModifierConfig.FadeModifier.Enabled}" />
                        </StackPanel>

                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Text="淡入时长" />
                        <u:NumericIntUpDown
                            InnerRightContent="ms"
                            Maximum="60000"
                            Minimum="0"
                            Step="200"
                            Value="{Binding SoundModifierConfig.FadeModifier.FadeInTimeMs}" />

                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Text="淡出时长" />
                        <u:NumericIntUpDown
                            InnerRightContent="ms"
                            Maximum="60000"
                            Minimum="0"
                            Step="200"
                            Value="{Binding SoundModifierConfig.FadeModifier.FadeOutTimeMs}" />

                        <TextBlock
                            FontSize="12"
                            FontWeight="Bold"
                            Text="渐变曲线" />
                        <ComboBox
                            ItemsSource="{Binding FadeCurves}"
                            MinWidth="150"
                            DisplayMemberBinding="{Binding Value}"
                            SelectedValueBinding="{Binding Key}"
                            SelectedValue="{Binding SoundModifierConfig.FadeModifier.CurveType}" />

                    </StackPanel>
                </Border>
            </WrapPanel>

        </StackPanel>

    </ScrollViewer>

</UserControl>